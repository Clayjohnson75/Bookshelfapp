{
  "crons": [
    {
      "path": "/api/scan-job",
      "schedule": "* * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/search",
      "destination": "/api/search"
    },
    {
      "source": "/profile",
      "destination": "/api/profile"
    },
    {
      "source": "/:username((?!favicon|robots|sitemap|.*\\.(ico|png|svg|jpg|jpeg|gif|txt|xml|json|css|js|woff|woff2|ttf|eot|webp|avif)$).*)",
      "destination": "/api/profile/:username"
    }
  ],
  "headers": [
    {
      "source": "/favicon.ico",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/favicon.png",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}


